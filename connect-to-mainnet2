  --topology "topology-mainnet"                                   \
  --logs-prefix "state-wallet-mainnet/logs"                               \
  --db-path "state-wallet-mainnet/db"                                     \
  --wallet-db-path 'state-wallet-mainnet/wallet-db'        \
